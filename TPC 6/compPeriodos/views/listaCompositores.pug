extends layout

block content
  .w3-card-4 
    header.w3-container.w3-black 
      h1= titulo
      a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
    .w3-container 
      table.w3-table-all 
        tr 
          th Id 
          th Nome 
          th Ações
        each c in compositores 
          tr 
            td
              a(href="/compositores/" + c.id) #{c.id}
            td=c.nome
            td
              a.w3-button.w3-green(href="/compositores/edit/" + c.id) Editar 
              a.w3-button.w3-red(href="/compositores/delete/" + c.id) Apagar

    footer.w3-container.w3-black 
      a.w3-button.w3-(href="/") Voltar ao Menu Principal
      address TPC6::EngWeb2024::a88220::#{data}