extends layout 

block content
    .w3-card-4 
    header.w3-container.w3-black 
      h1= titulo
    .w3-container 
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="_id" value= c.id pattern="C[0-9]+")
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value= c.nome)
                label Biografia
                input.w3-input.w3-round(type="textarea" name="bio" value= c.bio)
                label Data de Nascimento
                input.w3-input.w3-round(type="date" name="dataNasc" value= c.dataNasc)
                label Data da Óbito
                input.w3-input.w3-round(type="date" name="dataObito" value= c.dataObito)
                label Período
                input.w3-input.w3-round(type="text" name="periodo" value= c.periodo)
                br
                button.w3-btn.w3-green.w3-mb-2(type="submit") Editar
    footer.w3-container.w3-black 
        a.w3-button.w3-(href="/compositores") Voltar à lista dos compositores
