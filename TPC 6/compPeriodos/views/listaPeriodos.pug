extends layout

block content
  .w3-card-4 
    header.w3-container.w3-black 
      h1= titulo
      a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
    .w3-container 
      table.w3-table-all 
        tr 
          th Id 
          th Nome
          th Ações
        each p in periodos 
          tr 
            td
              a(href="/periodos/" + p.id) #{p.id}
            td=p.nome
            td
              a.w3-button.w3-green(href="/periodos/edit/" + p.id) Editar 
              a.w3-button.w3-red(href="/periodos/delete/" + p.id) Apagar

    footer.w3-container.w3-black 
      a.w3-button.w3-(href="/") Voltar ao Menu Principal
      address TPC6::EngWeb2024::a88220::#{data}